# Використовуємо образ Node.js
FROM node:14

# Встановлюємо робочу директорію всередині контейнера
WORKDIR /usr/src/app

# Копіюємо файл з числами у робочу директорію
COPY 10m.txt ./

# Копіюємо скрипт у робочу директорію
COPY index.js ./

# Команда для запуску скрипта
CMD ["node", "index.js", "10m.txt"]
